<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >

<android.support.v7.widget.RecyclerView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:paddingBottom="60dp"
    android:clipToPadding="false"
    android:scrollbars="vertical"
    android:layout_alignParentTop="true"
    />
<LinearLayout
    android:id="@+id/footer_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/home_button_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home_white_24dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Home"
            android:textSize="10sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/matters_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/matters_button_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_matters_accent_new_24dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Matters"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/calendar_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/calendar_button_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_calendar_white_new_24dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Calendar"
            android:textSize="10sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_matter_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/add_matter_button_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_matter_add_white_24dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="Add Matter"
            android:textSize="10sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>



